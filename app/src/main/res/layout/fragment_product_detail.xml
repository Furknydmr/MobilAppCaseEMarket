<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/productDetail_topbar_height"
        android:background="@color/blue"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/productDetail_topbar_padding_start"
        android:paddingEnd="@dimen/productDetail_topbar_padding_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/productDetail_back_icon_size"
            android:layout_height="@dimen/productDetail_back_icon_size"
            android:layout_marginLeft="@dimen/productDetail_back_icon_margin_left"
            android:src="@drawable/ic_back_24"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/txtToolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/productDetail_title_margin_start"
            android:paddingLeft="@dimen/productDetail_title_padding_left"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Başlık"
            android:textColor="@color/white"
            android:textSize="@dimen/productDetail_title_text_size"
            android:textStyle="bold" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/imageContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/productDetail_image_height"
                android:layout_margin="@dimen/productDetail_image_margin"
                android:background="#E0E0E0">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imgFavouriteDetail"
                    android:layout_width="@dimen/productDetail_fav_icon_size"
                    android:layout_height="@dimen/productDetail_fav_icon_size"
                    android:src="@drawable/ic_fav_24"
                    android:layout_gravity="top|end"
                    android:layout_margin="@dimen/productDetail_fav_icon_margin" />
            </FrameLayout>


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple iPhone"
                android:textColor="@color/black"
                android:textSize="@dimen/productDetail_title_text_size_big"
                android:textStyle="bold"
                android:paddingStart="@dimen/productDetail_title_padding_horizontal"
                android:paddingEnd="@dimen/productDetail_title_padding_horizontal" />


            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:textColor="@color/black"
                android:textSize="@dimen/productDetail_description_text_size"
                android:lineSpacingExtra="@dimen/productDetail_description_line_spacing"
                android:paddingStart="@dimen/productDetail_description_padding_horizontal"
                android:paddingEnd="@dimen/productDetail_description_padding_horizontal"
                android:paddingTop="@dimen/productDetail_description_padding_top"
                android:paddingBottom="@dimen/productDetail_description_padding_bottom" />
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/productDetail_bottom_height"
        android:padding="@dimen/productDetail_bottom_padding"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textColor="@color/blue"
                android:textSize="@dimen/productDetail_price_label_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00 TL"
                android:textSize="@dimen/productDetail_price_text_size"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="@dimen/productDetail_button_width"
            android:layout_height="@dimen/productDetail_button_height"
            android:text="Add to Cart"
            android:textSize="@dimen/productDetail_button_text_size"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
